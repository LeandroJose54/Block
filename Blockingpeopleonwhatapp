  <script>
    // --------- CONFIGURAÃ‡ÃƒO (troca aqui pelas tuas imagens) ----------
    const THUMBNAIL = "https://images.unsplash.com/photo-1517423440428-a5a00ad493e8?w=1600&q=80&auto=format&fit=crop";
    const SURPRISE_IMG = "https://placehold.co/1200x675/png/ffdd57-111111?text=PEGADINHA!+ðŸ˜‰";
    // ----------------------------------------------------------------
    document.querySelector('.thumb-img').src = THUMBNAIL;
    document.getElementById('surpriseImg').src = SURPRISE_IMG;

    const thumb = document.getElementById('thumb');
    const openBtn = document.getElementById('openBtn');
    const overlay = document.getElementById('overlay');
    const closeBtn = document.getElementById('closeBtn');

    function openSurprise(){
      overlay.style.display = "flex";
      overlay.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden';
    }
    function closeSurprise(){
      overlay.style.display = "none";
      overlay.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
    }

    thumb.addEventListener('click', openSurprise);
    openBtn.addEventListener('click', openSurprise);
    closeBtn.addEventListener('click', closeSurprise);

    // keyboard accessibility
    thumb.addEventListener('keydown', (e)=>{
      if(e.key === 'Enter' || e.key === ' ') { e.preventDefault(); openSurprise(); }
    });
    document.addEventListener('keydown', (e)=>{ if(e.key === 'Escape') closeSurprise(); });
  </script>
